<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@android:color/holo_orange_light">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDITANDO TOPE"

            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:weightSum="1"
                android:layout_height="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOPE BOLA:"
                    android:textSize="17dp"
                    android:layout_weight="0.5"
                    android:textColor="@android:color/black"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:layout_weight="0.5"
                    android:textSize="20dp"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:id="@+id/tope_bola_bd"
                    android:textColor="@android:color/black"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:weightSum="1"
                android:layout_height="50dp" android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NUEVO VALOR:"
                    android:textSize="17dp"
                    android:layout_weight="0.2"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"></TextView>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="100"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:layout_weight="0.5"
                    android:id="@+id/tope_bola_value"
                    android:textColor="@android:color/black"></EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="end|center"
                        android:id="@+id/image_tope_bola"
                        android:src="@drawable/ic_baseline_save_24"></ImageView>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:weightSum="1"
                android:layout_height="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOPE PARLET:"
                    android:textSize="17dp"
                    android:layout_weight="0.5"
                    android:textColor="@android:color/black"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:layout_weight="0.5"
                    android:textSize="20dp"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:id="@+id/tope_parlet_bd"
                    android:textColor="@android:color/black"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:weightSum="1"
                android:layout_height="50dp" android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NUEVO VALOR:"
                    android:textSize="17dp"
                    android:layout_weight="0.2"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"></TextView>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="100"
                    android:textSize="20dp"
                    android:inputType="number"
                    android:layout_weight="0.5"
                    android:id="@+id/tope_parlet_value"
                    android:textColor="@android:color/black"></EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="end"
                        android:id="@+id/image_tope_parlet"
                        android:src="@drawable/ic_baseline_save_24"></ImageView>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:weightSum="1"
                android:layout_height="wrap_content" android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TOPE CENTENA:"
                    android:textSize="17dp"
                    android:layout_weight="0.5"
                    android:textColor="@android:color/black"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$100"
                    android:layout_weight="0.5"
                    android:textSize="20dp"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:id="@+id/tope_centena_bd"
                    android:textColor="@android:color/black"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:weightSum="1"
                android:layout_height="50dp" android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="NUEVO VALOR:"
                    android:textSize="17dp"
                    android:layout_weight="0.2"
                    android:gravity="center|left"
                    android:textColor="@android:color/black"></TextView>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="100"
                    android:textSize="20dp"
                    android:inputType="number"
                    android:layout_weight="0.5"
                    android:id="@+id/tope_centena_value"
                    android:textColor="@android:color/black"></EditText>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:id="@+id/image_tope_centena"
                        android:layout_gravity="end"
                        android:src="@drawable/ic_baseline_save_24"></ImageView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</LinearLayout>